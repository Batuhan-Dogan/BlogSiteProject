@model CategoryDtoForGetOne
@if (Model.ResultStatus.Equals(ResultStatus.Success))
{
    <div class="row ml-3">
        <ol class="breadcrumb mb-3 mt-2">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
            <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Category" asp-action="Index">Kategoriler</a></li>
            <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory">Kategori Düzenle</a></li>
        </ol>
    </div>
    <div class="row p-2">
        <div class="bg-light p-4" style="width:380px;margin:auto;">
            <div class="lead">
                <h4 class="modal-title"><i class="fas fa-edit"></i> Kategori Düzenle</h4>
                <br />
                <div class="">
                    <form method="post" asp-area="Admin" id="form-category-update">
                        <div asp-validation-summary="All" class="text-danger"  aria-hidden="true" style="display:none"></div>
                        <div class="form-group">
                            <label> Kategori Adı</label>
                            <input  value="@Model.Category.Name" name="Name" class="form-control " />
                        </div>
                        <div class="form-group">
                            <label>Kategori Açıklaması</label>
                            <input name="Description" value="@Model.Category.Description" class="form-control" />
                        </div>
                        <input type="hidden" value="@Model.Category.Id" name="Id" />
                        <div class="form-group">
                            <label>Not</label>
                            <input  name="Note" value="@Model.Category.Note" class="form-control" />
                        </div>
                        <div class="form-check">
                            <input type="checkbox" name="IsActive" style="border:1px solid black;" class="form-check-input" @(Model.Category.IsActive ? "checked" : "") />
                            <label class="form-check-label">Aktif mi?</label>
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" style="border:1px solid black;" name="IsDeleted" @(Model.Category.IsDeleted ? "checked" : "") />
                            <label>Silinmiş mi?</label>
                        </div>
                        <div class="text-danger lead error-messages" style="font-size:14px;"></div>
                        <div class="modal-footer">
                            <div class="btn-group text-white text-center">
                                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-danger">
                                    <i class="fas fa-times"></i>
                                    İptal
                                </a>
                                <button class="btn text-white  btn-primary btn-save ">
                                    <i class="fas fa-save"></i>
                                    Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus.Equals(ResultStatus.Error))
{
    <h1 class="lead text-danger">@Model.Message</h1>
    <br />
    <h6>Admin alanına dönmek için <a class="alert-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">tıklayınız.</a></h6>
}
@section Scripts
{
    <script src="~/AdminLTE/js/categoryUpdate.js">
    </script>
}
