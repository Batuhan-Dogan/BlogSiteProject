@model ProgrammersBlog.Entities.Dtos.Classes.ArticleListDto
@{
    Layout = "_Layout";

}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Makaleler</a></li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Makaleler
    </div>
    <div class="row">
        <div class="text-center  mt-3">
            <a class="btn btn-sm btn-success rounded-0" asp-area="Admin" asp-controller="Article" asp-action="Add">
                <i class="fas fa-plus"></i>
                Makale Ekle
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori</th>
                    <th>Başlık</th>
                    <th>Küçük Resim</th>
                    <th>Tarih</th>
                    <th>Okunma Sayısı</th>
                    <th>Yorum Sayısı</th>
                    <th>Aktif Mi?</th>
                    <th>Silinmiş Mi?</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Oluşturan Kullanıcı Adı</th>
                    <th>Son Düzenlenme Tarihi</th>
                    <th>Son Düzenleyen Kullanıcı Adı</th>
                    <th>İşlemler</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>#</th>
                    <th>Kategori</th>
                    <th>Başlık</th>
                    <th>Küçük Resim</th>
                    <th>Tarih</th>
                    <th>Okunma Sayısı</th>
                    <th>Yorum Sayısı</th>
                    <th>Aktif Mi?</th>
                    <th>Silinmiş Mi?</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Oluşturan Kullanıcı Adı</th>
                    <th>Son Düzenlenme Tarihi</th>
                    <th>Son Düzenleyen Kullanıcı Adı</th>
                    <th>İşlemler</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var article in Model.Articles)
                {
                    <tr>
                        <td>@article.Id</td>
                        <td>@article.CategoryId</td>
                        <td>@article.Title</td>
                        <td><img src="~/img/@article.Thumbnail" class="my-image-table" style="width:100px;" /></td>
                        <td>@article.Date.ToShortDateString()</td>
                        <td>@article.ViewsCount</td>
                        <td>@article.CommentCount</td>
                        <td>@(article.IsActive ? "Evet" : "Hayır")</td>
                        <td>@(article.IsDeleted ? "Evet" : "Hayır")</td>
                        <td>@article.CreatedTime.ToShortDateString()</td>
                        <td>@article.CreatedByName</td>
                        <td>@article.ModifiedTime.ToShortDateString()</td>
                        <td>@article.ModifiedByName</td>
                        <td>
                            <a class="btn btn-primary btn-sm " asp-area="Admin" asp-controller="Article" asp-action="Update" asp-route-id="@article.Id"><span class="fas fa-edit"></span></a>
                            <a class="btn btn-danger btn-sm btn-delete" data-id="@article.Id"><span class="fas fa-minus-circle"></span></a>
                        </td>
                    </tr>
                }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/AdminLTE/js/articleIndex.js" type="application/ecmascript"></script>
    <script src="~/AdminLTE/js/articleDelete.js" type="application/ecmascript"></script>
}