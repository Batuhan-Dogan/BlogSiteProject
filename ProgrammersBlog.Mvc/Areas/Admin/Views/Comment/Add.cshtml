@model CommentAddDto
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Comment" asp-action="Index">Yorumlar</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Comment" asp-action="Add">Yorum Ekle</a></li>
</ol>
<div class="row">
    <div class="col-md-12">
        <div style="margin:auto" class=" mt-4 col-md-5 ">
            <form method="post" asp-area="Admin" asp-controller="Comment" asp-action="Add">
                <h4 class="modal-title"><i class="fas fa-plus"></i> Yorum Ekle</h4>
                <br />
                <div class="form-group">
                    <label asp-for="@Model.Text"></label>
                    <textarea asp-for="@Model.Text" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="@Model.Text"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ArticleId"></label>
                    <select asp-for="@Model.ArticleId " class="form-control" id="articleList">
                        @foreach (var item in ViewBag.Articles)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                    <span class="text-danger lead " asp-validation-for="@Model.ArticleId"></span>
                </div>
                <button type="submit" class="btn btn-block btn-primary lead">
                    <i class="fas fa-save"></i> 
                    Ekle
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/AdminLTE/js/commentAdd.js"></script>
}
@section Styles 
{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

