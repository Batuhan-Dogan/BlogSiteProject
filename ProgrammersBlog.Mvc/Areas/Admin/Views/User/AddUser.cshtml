@model UserAddDto
<br />
    <ol class="breadcrumb mb-3 mt-1">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="User" asp-action="Index">Kullanıcılar</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="User" asp-action="AddUser">Kullanıcı ekle</a></li>
    </ol>
<div class="row  ">
    <div class="col-md-12">
        <div class="col-md-5" style="margin:auto;">
        <div class="lead">
            <h4 class="modal-title"><i class="fas fa-plus"></i>Kullanıcı ekle</h4>
            <br />
                <form method="post" asp-area="Admin" asp-controller="User" asp-action="AddUser" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.UserName"></label>
                        <input class="form-control" asp-for="@Model.UserName" />
                        <span asp-validation-for="@Model.UserName" class="text-danger" style="font-size=14px;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email"></label>
                        <input  class="form-control" asp-for="@Model.Email" />
                        <span asp-validation-for="@Model.Email" class="text-danger" style="font-size=14px;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password"></label>
                        <input  asp-for="@Model.Password" class="form-control" />
                        <span asp-validation-for="@Model.Password" class="text-danger" style="font-size=14px;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.PhoneNumber"></label>
                        <input  asp-for="@Model.PhoneNumber" class="form-control" value="+905" />
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger" style="font-size=14px;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.PictureFile"></label>
                        <input accept="image/*" class="form-control-file" asp-for="@Model.PictureFile" />
                        <span asp-validation-for="@Model.PictureFile" class="text-danger" style="font-size=14px;"></span>

                    </div>
                    <div class="col-md-6">
                        <div class="lead p-2 mt-2">
                            @foreach (var item in ViewBag.Roles)
                            {
                                <div class="form-check">
                                    <input type="checkbox" name="Roles" value="@item" class="form-check-input border border-dark" />
                                    <label class="form-check-label">@item</label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="text-danger lead error-messages" style="font-size:14px;"></div>
                    <br />
                    <div class="modal-footer ">
                        <div class="btn-group text-white" style="margin:auto">
                            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-danger rounded-0">
                                <i class="fas fa-times"></i>
                                İptal
                            </a>
                            <button class="btn text-white rounded-0 btn-primary" type="submit">
                                <i class="fas fa-save"></i>
                                Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>