@model ResetPasswordDto
@{
    Layout = "_AccountLayout";
}
<title>Şifre Güncelle</title>
<div class="">
    <div class="col-md-12">
        <div class="row mt-4">
            <div class="col-md-6">
                <h3>Parola Güncelle</h3>
                <form method="post" asp-controller="Account" asp-action="ChangePassword">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input class="form-control" asp-for="CurrentPassword" />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input class="form-control" asp-for="NewPassword" />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPasswordConfirm"></label>
                        <input class="form-control" asp-for="NewPasswordConfirm" />
                    </div>
                    <div class=" text-danger" asp-validation-summary="All"></div>
                    <div class="d-flex align-items-center justify-content-center pb-4 mb-3">
                        <button class="btn mt-1 btn-primary lead rounded-5" type="submit" style="width:14rem;height:3rem;">
                            Kaydet
                        </button>
                    </div>

                </form>
            </div>
            <div class="col-md-6">
                <img class="img-fluid" src="~/img/vectorImages/5385948.jpg" />
            </div>

        </div>
    </div>

</div>
@section Scripts {
    <script src="~/AdminLTE/js/AccountResetPassword.js">
    </script>
}