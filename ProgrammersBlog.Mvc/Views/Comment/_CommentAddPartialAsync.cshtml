@model CommentAddDto
<div class="card my-4 rounded-4" >
    <div class="card-header">
        Yorum Ekle
    </div>
    <div class="card-body form-card">
        <form asp-controller="Comment" asp-action="Add" method="post" id="form-comment-add">
            <input asp-for="ArticleId" type="hidden" value="@Model.ArticleId"/>
            <input asp-for="CreatedByName" type="hidden" value="@Model.CreatedByName" />
            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none"></div>
            <div class="form-group">
                <input type="text" asp-for="@Model.Text" class="form-control border-dark" />
                    <button class="btn btn-block btn-info btn-add rounded-4 border-dark mt-2" type="submit">
                        Gönder
                        <i class="far fa-paper-plane"></i>
                    </button>
            </div>
            <div class="comment-Error text-center text-danger"></div>
        </form>
    </div>
</div>