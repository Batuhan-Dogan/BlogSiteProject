@model CategoryListDto

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: beige;z-index: 1000;">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand mx-auto" href="/Article/Index">MyBlog</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item ml-2">
                    <a class="nav-link" href="/developer">Geliştirici Hakkında</a>
                </li>
            </ul>
        </div>
        <div class="right-menu list-unstyled my-2" style="position: fixed; top: 0; right:15px;n">
            <partial name="_LoginButton"></partial>
        </div>
    </div>
</nav>

<div class="container text-center">
    <div class="scrollmenu mt-1">
        @foreach (var category in Model.Categories)
        {
            <a class="" asp-controller="Article" asp-action="Index" asp-route-CategoryId="@category.Id">@category.Name</a>
        }
    </div>
    <br/>
</div>
@section Styles {
    <link href="~/css/topNavBar.css" rel="stylesheet" type="text/css" />

}
<style>
    .scrollmenu {
        overflow: auto;
        white-space: nowrap;
        margin: auto;
    }

    .scrollmenu a {
        display: inline-block;
        text-align: center;
        padding: 6px;
        text-decoration: none;
        border-radius: 5px;
        color:black;
    }

    .scrollmenu a:hover {
        background-color: silver;
        transition: 0.2s;
    }
</style>