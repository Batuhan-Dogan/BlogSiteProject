@using ProgrammersBlog.Entities.Concrete
@model Article
<div class="col-md-6 mt-2">
<div class="card card-dark">
    <img class="img-fluid" alt="Responsive image" src="~/img/@Model.Thumbnail" style="max-width:500px;height:400px;">
    <div class="card-body">
        <h5 class="card-title text-danger">@Model.Title</h5>
        <h5 class="card-text font-weight-bolder">@Model.SeoDescription</h5>
        <h6 class="card-text my-1 text-secondary"></h6>

    </div>
    <ul class="list-group list-group-flush text-secondary" style="font-size:14px;">
        <li class="list-group-item">@Model.CreatedByName tarafından @Model.CreatedTime tarihinde yayınlandı</li>
        <li class="list-group-item">@Model.ModifiedByName tarafından @Model.ModifiedTime tarihinde güncellendi</li>
        <li class="list-group-item">@Model.SeoTags</li>
    </ul>
    <div class="card-body">
        <a asp-controller="Article" asp-action="Get" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary rounded-3">Makaleye git ></a>
    </div>
</div>
</div>
