@using ProgrammersBlog.Entities.ComplexTypes
@{
    var selected = Context.Request.Query["OrderBy"];
}
<div class="container my-1">
    <form asp-controller="Article" asp-action="Index" method="get">
        <input type="hidden" name="CategoryId" value="@(Context.Request.Query["CategoryId"])">
        <div class="row mt-2">
            <div class="input-group  mt-1 ">
                <input type="text" class="form-control" name="SearchTerm" placeholder="Ara..." />
            </div>
        </div>
        <br />
        <h6>
            <i class="fas fa-sort-amount-up"></i>
            Sırala
        </h6>
        <select class="form-select" aria-label="Default select example" name="OrderBy" id="orderSelectList" data-selected-value="@selected">
            <option value="@OrderOptions.Default">Varsayılan</option>
            <option value="@OrderOptions.MostRead">Çok Okunanlar</option>
            <option value="@OrderOptions.HotlyDebated">En çok yorum alanlar</option>
            <option value="@OrderOptions.FirstAdded">Önce ilk eklenen</option>
        </select>
        <br />
        <div class="row">
            <button class="btn btn-block btn-primary rounded-0 ml-1 " type="submit">
                <i class="fas fa-search"></i>
                Ara
            </button>
        </div>

    </form>
    <div RecentlyAdded unit="5" class=" mx-auto mt-3"></div>
</div>
@section Scripts {
    <script src="~/js/orderBySelectedList.js"></script>
}